@model PagedList.IPagedList<Model.EF.Employee>
@using PagedList.Mvc;
@{
    ViewBag.Title = "Index";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

@section header{
    Quản lý Nhân Viên

}
<div class="row">
    <div class="col-lg-12">
        <!-- DataTales Example -->
        <div class="card shadow mb-4">
            <div class="card-header py-3">
                <h6 class="m-0 font-weight-bold text-primary">Danh Sách Nhân Viên</h6>
            </div>
            <div class="card-body">
                @using (Html.BeginForm("Index", "Employees", FormMethod.Get))
                {
                    <div class="row">
                        <div class="col-lg-12">
                            <div class="col-md-4">
                                <input type="text" value="@ViewBag.searchString " name="searchString" />
                                <button type="submit">
                                    Tìm Kiếm
                                </button>
                            </div>
                        </div>
                    </div>
                }

                <div class="table-responsive">
                    <table class="table table-bordered" id="dataTable" cellspacing="0">
                        <thead>
                            <tr>
                                <th>#</th>
                                <th>Mã Nhân Viên</th>
                                <th>Tên Nhân Viên</th>
                                <th>Số Điện Thoại</th>
                                <th>Giới tính</th>
                                <th>Địa Chỉ Mail</th>
                                <th>Địa Chỉ</th>
                                <th>Vị trí</th>
                            </tr>
                        </thead>
                        <tfoot>
                            <tr>
                                <th>#</th>
                                <th>Mã Nhân Viên</th>
                                <th>Tên Nhân Viên</th>
                                <th>Số Điện Thoại</th>
                                <th>Giới tinh</th>
                                <th>Địa Chỉ Mail</th>
                                <th>Địa Chỉ</th>
                                <th>Vị trí</th>
                            </tr>
                        </tfoot>
                        <tbody>
                            @foreach (var item in Model)
                            {
                                <tr id="row_@item.ID">
                                    <td>
                                        <a href="/Admin/Employees/Edit/@item.ID">Sửa</a>
                                        |
                                        @Ajax.ActionLink("Xóa", "Delete",new {@id = item.ID }, new AjaxOptions
                                   {
                                       Confirm = "Bạn có muốn xóa?",
                                       OnComplete= "$('#row_"+@item.ID+"').remove()",
                                       HttpMethod = "Delete"
                                   })
                                    </td>
                                    <td>@item.ID</td>
                                    <td>@item.Name</td>
                                    <td>@item.Phone</td>
                                    <td>@item.Gender</td>
                                    <td>@item.Email</td>
                                    <td>@item.Address</td>
                                    <td>@item.Position</td>
                                </tr>
                            }
                        </tbody>
                    </table>
                    @Html.PagedListPager(Model, page => Url.Action("Index", new { page, @searchString = @ViewBag.searchString }))
                </div>
            </div>
        </div>

    </div>
</div>